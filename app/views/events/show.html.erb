<div class="container py-8">
  <div class="flex items-start flex-wrap gap-8 sm:flex-nowrap w-full">
    <div class="w-full sm:w-1/3">
      <h1 class="my-8"><%= @event.name %></h1>
      <div class="flex flex-col gap-2 pb-4">
        <% if @event.organisation.description.present? %>
          <span>
            <strong>Description:</strong> <%= @event.organisation.description.capitalize %>
          </span>
        <% end %>
        <span>
          <strong>Kind:</strong> <%= @event.organisation.kind.capitalize %>
        </span>
        <span>
          <strong>Frequency:</strong> <%= @event.organisation.frequency.capitalize %>
        </span>
        <span>
          <strong>Website:</strong> <%= link_to @event.organisation.website, @event.organisation.website, target: "_blank" %>
        </span>
      </div>
      <div class="flex flex-wrap gap-4">
        <%= link_to "#", class: "button secondary" do %>
          <div class="flex items-center gap-2">
            <%= heroicon :pencil_square %>
            <span>Edit</span>
          </div>
        <% end %>
        <% if Current.user&.admin? %>
          <%= button_to "fetch from Github", "#", method: :patch, class: "button" %>
        <% end %>
      </div>
    </div>
    <div class="w-full">
      <div id="talks" class="min-w-full grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 h-full sm:p-4">
        <% @talks.each do |talk| %>
          <%= render partial: "talks/card",
                locals: {
                  talk: talk,
                  picture_profile: false,
                  speaker_slug: talk.speakers.first&.slug
                } %>
        <% end %>
      </div>
      <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
    </div>
  </div>
</div>
