<%= form_with(model: talk, class: "contents") do |form| %>
  <% if talk.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(talk.errors.count, "error") %> prohibited this talk from being saved:</h2>

      <ul>
        <% talk.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: "input input-bordered w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 4, class: "textarea textarea-bordered w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :date %>
    <%= form.text_field :date, class: "input input-bordered w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :summarized_using_ai, "Summarized using AI?" %>
    <div class="text-sm font-light mb-2">
      If this talk's summary was generated by AI, please check this box. A "Summarized using AI" badge will be displayed in the summary tab to indicate that the summary was generated using AI.
    </div>

    <div class="flex my-5 gap-2 align-center content-center items-center">
      <%= form.check_box :summarized_using_ai, class: "block h-5 w-5" %>
      <%= form.label :summarized_using_ai, %(Show "Summarized using AI" on summary page), class: "font-normal" %>
    </div>
  </div>

  <div class="my-5">
    <%= form.label :summary %>
    <div class="text-sm font-light mb-2">Markdown supported</div>
    <%= form.text_area :summary, rows: 10, class: "textarea textarea-bordered w-full" %>
  </div>

  <div class="inline">
    <%= ui_button "Suggest modifications", type: :submit %>
    <%= ui_button "Cancel", url: talk_path(talk), outline: true, role: :button %>
  </div>
<% end %>
