<%= link_to speaker, class: "flex flex-col gap-4 hover:bg-gray-200 transition-bg duration-300 ease-in-out p-2 px-4 rounded-lg" do %>
  <div class="flex items-center gap-4">
    <div class="avatar placeholder">
      <div class="w-12 rounded-full bg-primary text-neutral-content">
        <% if speaker.github.present? %>
          <%= image_tag speaker.github_avatar_url(size: 48) %>
        <% else %>
          <span class="text-lg"><%= speaker.name.split(" ").map(&:first).join %></span>
        <% end %>
      </div>
    </div>

    <div>
      <div class="font-bold text-base line-clamp-1">
        <%= speaker.name %>
      </div>
      <div class="text-xs text-gray-500 line-clamp-1">
        <% if speaker.github.present? %>
          <%= "@#{speaker.github}" %>
        <% else %>
          <%= pluralize(speaker.talks.count, "talk") %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
