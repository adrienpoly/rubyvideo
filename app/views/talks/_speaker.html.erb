<%= link_to speaker, class: "flex flex-col gap-4 hover:bg-neutral-200 transition-bg duration-300 ease-in-out p-2 rounded-lg" do %>
  <div class="flex items-center gap-4">
    <div class="avatar">
      <div class="w-12 rounded-full">
        <%= image_tag speaker.github_avatar_url %>
      </div>
    </div>
    <div>
      <div class="font-medium">
        <%= speaker.name %>
      </div>
      <div class="text-sm text-gray-500">
        <%= "@#{speaker.github}" %>
      </div>
    </div>
  </div>
<% end %>