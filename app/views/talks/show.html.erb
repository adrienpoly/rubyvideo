<div class="container my-8 w-full flex flex-col gap-4">
  <%= link_to @back_path do %>
    <div class="flex items-center gap-2 title text-brand">
      <%= heroicon :arrow_long_left %>
      <span>List</span>
    </div>
  <% end %>
  <div class="w-full flex">
    <div class="flex-grow">
      <%= render @talk %>
      <%= link_to edit_talk_path(@talk), class: "button secondary" do %>
          <div class="flex items-center gap-2">
            <%= heroicon :pencil_square %>
            <span>edit</span>
          </div>
        <% end %>
    </div>
    <div class="gap-4 w-60 flex-shrink-0 hidden md:flex md:flex-col px-4">
      <%= render partial: "talks/card_horizontal", collection: @talks, as: :talk, locals: {compact: true} %>
    </div>
  </div>
</div>
