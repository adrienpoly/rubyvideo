<%# locals: talk: -%>

<div class="flex flex-col gap-2">
  <% talk.transcript.cues.each do |cue| %>
    <div class="flex gap-4">
      <span class="cursor-pointer" data-action="click->video-player#seekTo" data-video-player-time-param="<%= cue.start_time_in_seconds %>">
        <%= cue.start_time %>
      </span>
      <span><%= cue.text %></span>
    </div>
  <% end %>
</div>
